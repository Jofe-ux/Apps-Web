<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Piedra, Papel, Tijera (Teoría de Juegos)</title>
    <!-- Cargamos Tailwind CSS para un diseño moderno -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Usamos la fuente Inter */
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Pequeña animación para los botones */
        .btn-choice {
            transition: all 0.2s ease;
        }
        .btn-choice:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        .btn-reset {
            transition: all 0.2s ease;
        }
        .btn-reset:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body class="bg-gray-900 text-white min-h-screen flex items-center justify-center p-4" style="font-family: 'Inter', sans-serif;">

    <div class="container mx-auto max-w-lg w-full bg-gray-800 rounded-2xl shadow-2xl p-6 md:p-10 text-center">

        <h1 class="text-3xl md:text-4xl font-bold text-cyan-400 mb-2">Piedra, Papel, Tijera</h1>
        <p class="text-lg text-gray-300 mb-6">Juego de Suma Cero (Payoff: 5 Bs)</p>

        <!-- Muestra el estado actual del juego -->
        <div class="bg-gray-700 rounded-lg p-4 mb-6">
            <h2 id="status-display" class="text-xl font-semibold text-yellow-300">Turno del Jugador 1</h2>
        </div>

        <!-- Controles del Jugador 1 -->
        <div id="player1-controls">
            <h3 class="text-2xl font-light mb-4">Jugador 1: Elige tu jugada</h3>
            <div class="grid grid-cols-3 gap-4">
                <button data-choice="Piedra" class="btn-choice bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 px-4 rounded-lg text-2xl shadow-lg">✊</button>
                <button data-choice="Papel" class="btn-choice bg-green-600 hover:bg-green-500 text-white font-bold py-4 px-4 rounded-lg text-2xl shadow-lg">✋</button>
                <button data-choice="Tijera" class="btn-choice bg-red-600 hover:bg-red-500 text-white font-bold py-4 px-4 rounded-lg text-2xl shadow-lg">✌️</button>
            </div>
        </div>

        <!-- Controles del Jugador 2 (ocultos al inicio) -->
        <div id="player2-controls" class="hidden">
            <h3 class="text-2xl font-light mb-4">Jugador 2: Elige tu jugada</h3>
            <p class="text-sm text-gray-400 mb-4">(¡Jugador 1 no mires!)</p>
            <div class="grid grid-cols-3 gap-4">
                <button data-choice="Piedra" class="btn-choice bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 px-4 rounded-lg text-2xl shadow-lg">✊</button>
                <button data-choice="Papel" class="btn-choice bg-green-600 hover:bg-green-500 text-white font-bold py-4 px-4 rounded-lg text-2xl shadow-lg">✋</button>
                <button data-choice="Tijera" class="btn-choice bg-red-600 hover:bg-red-500 text-white font-bold py-4 px-4 rounded-lg text-2xl shadow-lg">✌️</button>
            </div>
        </div>

        <!-- Pantalla de Resultados (oculta al inicio) -->
        <div id="result-display" class="hidden mt-8">
            <div class="bg-gray-700 rounded-lg p-6">
                <h3 class="text-2xl font-semibold mb-4 text-cyan-400">Resultados</h3>
                <div class="flex justify-around items-center text-lg mb-4">
                    <div>
                        <p class="text-gray-400">Jugador 1</p>
                        <p id="p1-result-choice" class="text-3xl font-bold"></p>
                    </div>
                    <span class="text-gray-500 text-xl">vs</span>
                    <div>
                        <p class="text-gray-400">Jugador 2</p>
                        <p id="p2-result-choice" class="text-3xl font-bold"></p>
                    </div>
                </div>
                
                <p class="text-gray-300 text-xl mt-6 mb-2">Payoff (J1, J2):</p>
                <p id="payoff-result" class="text-4xl font-extrabold text-yellow-300"></p>
            </div>
            
            <button id="reset-button" class="btn-reset w-full mt-6 bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 px-6 rounded-lg text-lg">
                Jugar de nuevo
            </button>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Definición de la Matriz de Pagos ---
            // Basada en la imagen: (Jugador 1, Jugador 2) con ganancia de 5
            const payoffMatrix = {
                "Piedra": {
                    "Piedra": "(0, 0)",
                    "Papel": "(-5, 5)",
                    "Tijera": "(5, -5)"
                },
                "Papel": {
                    "Piedra": "(5, -5)",
                    "Papel": "(0, 0)",
                    "Tijera": "(-5, 5)"
                },
                "Tijera": {
                    "Piedra": "(-5, 5)",
                    "Papel": "(5, -5)",
                    "Tijera": "(0, 0)"
                }
            };

            // --- Variables de Estado del Juego ---
            let player1Choice = null;
            let player2Choice = null;

            // --- Referencias a Elementos del DOM ---
            const statusDisplay = document.getElementById('status-display');
            const player1Controls = document.getElementById('player1-controls');
            const player2Controls = document.getElementById('player2-controls');
            const resultDisplay = document.getElementById('result-display');
            const resetButton = document.getElementById('reset-button');

            const p1ResultText = document.getElementById('p1-result-choice');
            const p2ResultText = document.getElementById('p2-result-choice');
            const payoffResultText = document.getElementById('payoff-result');

            // --- Lógica del Juego ---

            // 1. Event Listeners para el Jugador 1
            player1Controls.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', () => {
                    player1Choice = button.dataset.choice;
                    // Ocultar controles P1, mostrar controles P2
                    player1Controls.classList.add('hidden');
                    player2Controls.classList.remove('hidden');
                    statusDisplay.textContent = 'Turno del Jugador 2';
                });
            });

            // 2. Event Listeners para el Jugador 2
            player2Controls.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', () => {
                    player2Choice = button.dataset.choice;
                    // Ocultar controles P2, calcular y mostrar resultados
                    player2Controls.classList.add('hidden');
                    statusDisplay.textContent = '¡Resultado!';
                    showResults();
                });
            });

            // 3. Función para Calcular y Mostrar Resultados
            function showResults() {
                // Usar la matriz para encontrar el payoff
                const payoff = payoffMatrix[player1Choice][player2Choice];

                // Mostrar las elecciones
                p1ResultText.textContent = getEmoji(player1Choice);
                p2ResultText.textContent = getEmoji(player2Choice);
                
                // Mostrar el payoff
                payoffResultText.textContent = payoff;

                // Mostrar el bloque de resultados
                resultDisplay.classList.remove('hidden');
            }

            // 4. Event Listener para el botón de Reinicio
            resetButton.addEventListener('click', () => {
                // Resetear variables de estado
                player1Choice = null;
                player2Choice = null;

                // Resetear UI al estado inicial
                resultDisplay.classList.add('hidden');
                player2Controls.classList.add('hidden'); // Asegurarse que P2 esté oculto
                player1Controls.classList.remove('hidden');
                statusDisplay.textContent = 'Turno del Jugador 1';
            });
            
            // Función de ayuda para obtener el emoji
            function getEmoji(choice) {
                if (choice === 'Piedra') return '✊';
                if (choice === 'Papel') return '✋';
                if (choice === 'Tijera') return '✌️';
                return '';
            }
        });
    </script>

</body>
</html>
